{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "RDAP JSON",
    "description": "JSON representation of rdap entities",
    "type": "object",

    "anyOf": [
        {
            "$ref": "#/definitions/autnum"
        },
        {
            "$ref": "#/definitions/domain"
        },
        {
            "$ref": "#/definitions/entity"
        },
        {
            "$ref": "#/definitions/ip"
        },
        {
            "$ref": "#/definitions/error"
        }
    ],

    "definitions": {
        "autnum": {
            "type": "object",
            "required": [  "rdapConformance", "handle", "startAutnum", "endAutnum" ],
            "properties": {
                "rdapConformance": {
                    "$ref": "#/definitions/rdapConformance"
                },
                "notices": {
                    "$ref": "#/definitions/notices"
                },
                "remarks": {
                    "$ref": "#/definitions/remarks"
                },
                "events": {
                    "$ref": "#/definitions/events"
                },
                "port43": {
                    "type": "string"
                },
                "links": {
                    "$ref": "#/definitions/links"
                },

                "handle": {
                    "type": "string"
                },
                "startAutnum": {
                    "type": "integer"
                },
                "endAutnum": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "country": {
                    "type": "string"
                },
                "entities": {
                    "$ref": "#/definitions/entities"
                }
            },
            "additionalProperties" : false
        },

        "domain": {
            "required": [  "rdapConformance", "handle", "ldhName", "nameServers" ],
            "properties": {
                "rdapConformance": {
                    "$ref": "#/definitions/rdapConformance"
                },
                "notices": {
                    "$ref": "#/definitions/notices"
                },
                "remarks": {
                    "$ref": "#/definitions/remarks"
                },
                "events": {
                    "$ref": "#/definitions/events"
                },
                "port43": {
                    "type": "string"
                },
                "links": {
                    "$ref": "#/definitions/links"
                },

                "handle": {
                    "type": "string"
                },
                "ldhName": {
                    "type": "string"
                },
                "nameServers": {
                    "$ref": "#/definitions/nameServers"
                },
                "entities": {
                    "$ref": "#/definitions/entities"
                },
                "vcardArray": {
                    "$ref": "#/definitions/vcardArray"
                }
            },
            "additionalProperties" : false
        },

        "entity": {
            "type": "object",
            "required": [  "rdapConformance", "handle" ],
            "properties": {
                "rdapConformance": {
                    "$ref": "#/definitions/rdapConformance"
                },
                "notices": {
                    "$ref": "#/definitions/notices"
                },
                "remarks": {
                    "$ref": "#/definitions/remarks"
                },
                "events": {
                    "$ref": "#/definitions/events"
                },
                "port43": {
                    "type": "string"
                },
                "links": {
                    "$ref": "#/definitions/links"
                },

                "handle": {
                    "type": "string"
                },
                "entities": {
                    "$ref": "#/definitions/entities"
                },
                "vcardArray": {
                    "$ref": "#/definitions/vcardArray"
                }
            },
            "additionalProperties" : false
        },

        "ip": {
            "type": "object",
            "required": [ "rdapConformance", "handle", "startAddress", "endAddress", "ipVersion" ],
            "properties": {
                "rdapConformance": {
                    "$ref": "#/definitions/rdapConformance"
                },
                "notices": {
                    "$ref": "#/definitions/notices"
                },
                "remarks": {
                    "$ref": "#/definitions/remarks"
                },
                "events": {
                    "$ref": "#/definitions/events"
                },
                "port43": {
                    "type": "string"
                },
                "links": {
                    "$ref": "#/definitions/links"
                },

                "handle": {
                    "type": "string"
                },
                "startAddress": {
                    "type": "string"
                },
                "endAddress": {
                    "type": "string"
                },
                "ipVersion": {
                    "enum": [ "v4", "v6" ]
                },
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "country": {
                    "type": "string"
                },
                "parentHandle": {
                    "type": "string"
                },
                "entities": {
                    "$ref": "#/definitions/entities"
                }
            },
            "additionalProperties" : false
        },

        "error": {
            "type": "object",
            "required": [ "rdapConformance", "errorCode" ],
            "properties": {
                "rdapConformance": {
                    "$ref": "#/definitions/rdapConformance"
                },
                "notices": {
                    "$ref": "#/definitions/notices"
                },
                "remarks": {
                    "$ref": "#/definitions/remarks"
                },
                "events": {
                    "$ref": "#/definitions/events"
                },
                "port43": {
                    "type": "string"
                },
                "links": {
                    "$ref": "#/definitions/links"
                },

                "errorCode": {
                    "type": "integer"
                },
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "array"
                }
            },
            "additionalProperties" : false
        },

        "rdapConformance": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string",
                "enum": [ "rdap_level_0"  ]
            },
            "uniqueItems": true
        },

        "notices": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "array"
                    },
                    "links": {
                        "$ref": "#/definitions/links"
                    }
                },
                "additionalProperties": false
            }
        },

        "links": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "hreflang": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "title": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "value": {
                        "type": "string"
                    },
                    "rel": {
                        "type": "string"
                    },
                    "href": {
                        "format": "uri",
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "media": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },

        "remarks": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "links": {
                        "$ref": "#/definitions/links"
                    }
                },
                "additionalProperties": false
            }
        },

        "events": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "eventAction": {
                        "type": "string"
                    },
                    "eventActor": {
                        "type": "string"
                    },
                    "eventDate": {
                        "format": "date-time"
                    }
                },
                "additionalProperties": false
            }
        },

        "entities": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [ "handle" ],
                "properties": {
                    "handle": {
                        "type": "string"
                    },
                    "vcardArray": {
                        "$ref": "#/definitions/vcardArray"
                    }
                }
            }
        },

        "nameServers": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "ldhName": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },

        "vcardArray": {
            "type": "array",
            "items": [
                {
                    "type": "string"
                },
                {
                    "items": {
                        "$ref": "#/definitions/vcard"
                    }
                }
            ]
        },

        "vcard": {
            "type": "array",
            "items": [
                {
                    "type": "string",
                    "enum": [ "fn", "version", "kind", "adr", "tel", "email" ]
                },
                {
                    "type": "object",
                    "properties": {
                        "label": {
                            "type": "string"
                        },
                        "type": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                },
                {
                    "enum": [ "text" ]
                },
                {
                    "type": [ "string", "array" ]
                }
            ]
        }
    }
}
