{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "RDAP JSON",
    "description": "JSON representation of rdap entities",
    "type": "object",
    "required": [ "rdapConformance" ],
    "additionalProperties": false,

    "properties": {
        "rdapConformance": {
            "$ref": "#/definitions/rdapConformance"
        },

        "notices": {
            "$ref": "#/definitions/notices"
        },

        "port43": {
            "type": "string"
        }
    },

    "definitions": {
        "rdapConformance": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string",
                "enum": [ "rdap_level_0"  ]
            },
            "uniqueItems": true
        },
        "notices": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "array"
                    },
                    "links": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "object",
                            "properties": {
                                "value": {
                                    "type": "string"
                                },
                                "rel": {
                                    "type": "string"
                                },
                                "href": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": false
                        }
                    }
                },
                "additionalProperties": false
            }
        }
    }
}
